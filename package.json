{
  "name": "usthing-cape",
  "version": "0.1.0",
  "main": "./electron.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "submit": "git-cz",
    "start": "npm run dev",
    "dev": "NODE_ENV=development clipped dev",
    "//dev:electron": "concurrently 'TARGET=electron npm run dev' 'wait-on http://localhost:8080/ && ELECTRON_START_URL=http://localhost:8080 electron .'",
    "dev:electron": "concurrently 'TARGET=electron npm run dev' 'wait-on http://localhost:8080/ && ELECTRON_START_URL=http://localhost:8080 electron .'",
    "pack": "electron-builder --dir",
    "build": "clipped build",
    "build:electron": "TARGET=electron npm run build && electron-builder",
    "build:storybook": "build-storybook -o storybook",
    "deploy:storybook": "storybook-to-ghpages",
    "lint": "xo --fix",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test": "echo No tests yet"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "./**/*.{js,jsx,json,css}": [
        "npm run lint",
        "git add"
      ]
    },
    "ignore": [
      "**/node_modules/**",
      "**/.git/**"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "build": {
    "appId": "com.usthing.cape",
    "files": [
      "electron.js",
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "publish": {
      "provider": "github"
    },
    "extends": null
  },
  "xo": {
    "parser": "babel-eslint",
    "extends": "xo-react",
    "semicolon": false,
    "esnext": true,
    "space": 2,
    "envs": [
      "node",
      "browser",
      "es6",
      "serviceworker"
    ],
    "globals": [
      "it"
    ],
    "rules": {
      "import/no-unassigned-import": 0,
      "capitalized-comments": 0,
      "quote-props": [
        "warn",
        "consistent"
      ]
    }
  },
  "dependencies": {
    "auto-bind": "^1.2.0",
    "classnames": "^2.2.5",
    "is-electron": "^2.1.0",
    "md5": "^2.2.1",
    "nothing-mock": "^1.0.2",
    "prop-types": "^15.6.1",
    "query-string": "^6.0.0",
    "ramda": "^0.25.0",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-router-dom": "^4.2.2",
    "react-router-util": "^0.6.0",
    "skygear": "^1.4.0",
    "unstated": "^2.0.2"
  },
  "devDependencies": {
    "@clipped/preset-webpack4-frontend": "^0.4.3",
    "@storybook/addon-actions": "^3.4.0",
    "@storybook/react": "^4.0.0-alpha.1",
    "@storybook/storybook-deployer": "^2.3.0",
    "autoprefixer": "^8.2.0",
    "babel-eslint": "^8.2.2",
    "babel-plugin-ramda": "^1.5.0",
    "commitizen": "^2.9.6",
    "concurrently": "^3.5.1",
    "cz-conventional-changelog": "^2.1.0",
    "electron": "^1.8.4",
    "electron-builder": "^20.8.1",
    "eslint": "^4.19.1",
    "eslint-config-xo-react": "^0.16.0",
    "eslint-plugin-react": "^7.7.0",
    "husky": "^0.15.0-rc.13",
    "lint-staged": "^7.0.4",
    "node-loader": "^0.6.0",
    "node-sass": "^4.8.3",
    "offline-plugin": "^4.9.0",
    "postcss-import": "^11.1.0",
    "postcss-url": "^7.3.2",
    "sass-loader": "^6.0.7",
    "tailwindcss": "^0.5.2",
    "wait-on": "^2.1.0",
    "xo": "^0.20.3"
  },
  "optionalDependencies": {
    "keytar": "^4.2.1"
  }
}
