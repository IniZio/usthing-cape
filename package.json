{
  "name": "usthing-cape",
  "version": "0.1.0",
  "main": "./electron.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "submit": "git-cz",
    "start": "npm run dev",
    "dev": "NODE_ENV=development clipped dev",
    "//dev:electron": "concurrently 'npm run dev' 'wait-on http://localhost:8080/ && ELECTRON_START_URL=http://localhost:8080 electron .'",
    "dev:electron": "concurrently 'npm run dev' 'ELECTRON_START_URL=http://localhost:8080 electron .'",
    "pack": "electron-builder --dir",
    "build": "clipped build",
    "build:electron": "TARGET=electron npm run build && electron-builder",
    "lint": "xo --fix",
    "test": "echo No tests yet"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "./**/*.{js,jsx,json,css}": [
        "npm run lint",
        "git add"
      ]
    },
    "ignore": [
      "**/node_modules/**",
      "**/.git/**"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "build": {
    "appId": "com.usthing.cape",
    "files": [
      "electron.js",
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "publish": {
      "provider": "github"
    },
    "extends": null
  },
  "xo": {
    "extends": "xo-react",
    "semicolon": false,
    "space": 2,
    "envs": [
      "node",
      "browser",
      "es6",
      "serviceworker"
    ],
    "globals": [
      "it"
    ],
    "rules": {
      "import/no-unassigned-import": 0,
      "capitalized-comments": 0,
      "quote-props": ["warn", "consistent"]
    }
  },
  "dependencies": {
    "react": "^16.3.1",
    "react-dom": "^16.3.1"
  },
  "devDependencies": {
    "@clipped/preset-webpack4-frontend": "^0.4.3",
    "commitizen": "^2.9.6",
    "concurrently": "^3.5.1",
    "cz-conventional-changelog": "^2.1.0",
    "electron": "^1.8.4",
    "electron-builder": "^20.8.1",
    "eslint-config-xo-react": "^0.16.0",
    "eslint-plugin-react": "^7.7.0",
    "husky": "^0.15.0-rc.13",
    "lint-staged": "^7.0.4",
    "node-sass": "^4.8.3",
    "sass-loader": "^6.0.7",
    "tailwindcss": "^0.5.2",
    "wait-on": "^2.1.0",
    "xo": "^0.20.3"
  }
}
